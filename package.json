{
  "name": "gold-tv",
  "version": "1.2.0",
  "main": "server.js",
  "bin": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "build:win": "pkg . --target node18-win-x64 --output dist/gold-tv.exe",
    "package:win": "npm run build:win && cd dist && zip -r gold-tv-win.zip gold-tv.exe"
  },
  "dependencies": {
    "express": "^4.19.2",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ]
  }
}
